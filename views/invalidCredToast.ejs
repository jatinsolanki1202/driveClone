<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invalid Credentials</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      .tilt-container {
        perspective: 1000px; /* Adds a 3D perspective to the card */
      }
      .tilt-card {
        transform-style: preserve-3d; /* Ensures proper 3D transformations */
        transition: transform 0.2s ease-out; /* Smooth transition for reset */
      }
    </style>
  </head>
  <body>
    <div
      class="h-screen w-full flex justify-center items-center bg-[radial-gradient(circle,_rgba(243,244,246,1)_0%,_rgba(209,213,219,1)_50%,_rgba(243,244,246,1)_100%)] dark:bg-[radial-gradient(circle,_rgba(31,41,55,1)_0%,_rgba(55,65,81,1)_50%,_rgba(17,24,39,1)_100%)]"
    >
      <div class="tilt-container">
        <div
          class="bg-white dark:bg-gray-900 p-8 rounded-lg shadow-xl backdrop-blur-xl max-w-sm text-center tilt-card"
        >
          <i class="ri-error-warning-line text-red-500 text-6xl mb-4"></i>
          <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">
            Invalid Email or Password
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            Please verify your credentials and try again.
          </p>
          <a
            href="/user/login"
            class="inline-block px-6 py-3 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 rounded-lg shadow dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800"
          >
            Go to Login
          </a>
        </div>
      </div>
    </div>
    <script>
      const tiltCard = document.querySelector(".tilt-card");
      const tiltContainer = document.querySelector(".tilt-container");

      tiltContainer.addEventListener("mousemove", (e) => {
        const rect = tiltContainer.getBoundingClientRect();
        const x = e.clientX - rect.left; // X position relative to container
        const y = e.clientY - rect.top; // Y position relative to container
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;

        const rotateX = ((y - centerY) / centerY) * 10; // Tilt along X-axis
        const rotateY = ((x - centerX) / centerX) * -10; // Tilt along Y-axis

        tiltCard.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });

      tiltContainer.addEventListener("mouseleave", () => {
        tiltCard.style.transform = `rotateX(0deg) rotateY(0deg)`; // Reset card on mouse leave
      });
    </script>
  </body>
</html>
